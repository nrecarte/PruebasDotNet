@model SegConRep.grupo

@{
    ViewBag.Title = "Creación de Grupos";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="row-fluid">
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    
        <div class="form-horizontal">
            <legend><strong class="text-info">Creación</strong> de un Grupo</legend>

            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.Label("Nombre", new { @class = "control-label col-md-2" })
                @* @Html.LabelFor(model => model.grupo_nombre, new { @class = "control-label col-md-2" })*@
                <div class="col-md-4">
                    <div class="input-group" data-validate="length" data-length="5">
                        @Html.EditorFor(model => model.grupo_nombre, new
                        {
                            htmlAttributes = new { @class = "form-control", id = "txtNombre", placeholder = "Nombre del Grupo", maxlength="75", required="" }
                        })
                        <span class="input-group-addon danger"><span class="glyphicon glyphicon-remove"></span></span>
                    </div> 
                    @Html.ValidationMessageFor(model => model.grupo_nombre)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Crear" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
    <hr />
    @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-sm btn-primary" })
    <br />
    <br />
</div>
