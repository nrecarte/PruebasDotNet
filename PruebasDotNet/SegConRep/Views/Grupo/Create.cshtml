@model SegConRep.grupo

@{
    ViewBag.Title = "Creación de Grupos";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<h2>Creación de un Grupo</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>grupo</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("Nombre",new { @class = "control-label col-md-2" })
            @* @Html.LabelFor(model => model.grupo_nombre, new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.grupo_nombre)
                @Html.ValidationMessageFor(model => model.grupo_nombre)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index",null,new { @class = "btn btn-sm btn-primary" }))
</div>

<script src="~/Scripts/jquery-2.1.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
