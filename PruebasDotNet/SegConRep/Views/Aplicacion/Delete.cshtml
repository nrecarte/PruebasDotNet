@model SegConRep.aplicacion

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<br />
<legend><strong class="text-info">Eliminación</strong> de Aplicaciones</legend>

<h3>Esta seguro/a que desea eliminar esta Aplicación?</h3>
<div>

    <dl class="dl-horizontal">
        <dt>Nombre
            @*@Html.DisplayNameFor(model => model.aplicacion_nombre)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.aplicacion_nombre)
        </dd>

        <dt>Descripción
            @*@Html.DisplayNameFor(model => model.aplicacion_Descripcion)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.aplicacion_Descripcion)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-primary" })
        </div>
    }
    <br />
</div>
