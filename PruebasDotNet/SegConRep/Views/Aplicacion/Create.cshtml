@model SegConRep.aplicacion

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="row-fluid">
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    
        <div class="form-horizontal">
            <legend><strong class="text-info">Creación</strong> de Aplicaciones</legend>

            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.Label("Nombre de la Aplicación", new { @class = "control-label col-md-2" })
                @*@Html.LabelFor(model => model.aplicacion_nombre, new { @class = "control-label col-md-2" })*@

                <div class="col-md-4">
                    <div class="input-group" data-validate="length" data-length="5">
                        @Html.EditorFor(model => model.aplicacion_nombre, new
                        {
                            htmlAttributes = new { @class = "form-control", id = "txtNombre", placeholder = "Nombre de la Aplicación", maxlength = "75", required = "" }
                        })
                        <span class="input-group-addon danger"><span class="glyphicon glyphicon-remove"></span></span>
                    </div>
                    @Html.ValidationMessageFor(model => model.aplicacion_nombre)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Descripción de la Aplicación", new { @class = "control-label col-md-2" })
                @*@Html.LabelFor(model => model.aplicacion_Descripcion, new { @class = "control-label col-md-2" })*@
                <div class="col-md-4">
                    <div class="input-group" data-validate="length" data-length="5">
                        @Html.EditorFor(model => model.aplicacion_Descripcion, new
                        {
                            htmlAttributes = new { @class = "form-control", id = "txtDescripcion", placeholder = "Descripción de la Aplicación", maxlength = "250", required = "" }
                        })
                        <span class="input-group-addon danger"><span class="glyphicon glyphicon-remove"></span></span>
                    </div>
                    @Html.ValidationMessageFor(model => model.aplicacion_Descripcion)
                </div>

            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Crear" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
    <hr />
    @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-sm btn-primary" })
    <br />
    <br />
</div>

